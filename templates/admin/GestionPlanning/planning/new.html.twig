  {% extends 'admin/layout.html.twig' %}

  {% block title %}Create Planning{% endblock %}

  {% block content %}
  <div class="container">
    <div class="page-inner">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card">
            <div class="card-header">
              <h4 class="card-title">Create Planning</h4>
            </div>
            <div class="card-body">
            {{ form_start(form, { 'attr': { 'novalidate': 'novalidate' } }) }}
                <!-- Doctor dropdown -->
                <div class="form-group">
                  {{ form_label(form.doctor) }}
                  {{ form_widget(form.doctor, {'attr': {'class': 'form-control'}}) }}
                  {{ form_errors(form.doctor) }}
                </div>
                <div class="form-group mt-3">
                  {{ form_label(form.startDate) }}
                  {{ form_widget(form.startDate, {'attr': {'class': 'form-control'}}) }}
                  {{ form_errors(form.startDate) }}
                </div>
                <div class="form-group mt-3">
                  {{ form_label(form.endDate) }}
                  {{ form_widget(form.endDate, {'attr': {'class': 'form-control'}}) }}
                  {{ form_errors(form.endDate) }}
                </div>
                <div class="form-group mt-3">
                  {{ form_label(form.dailyStartTime) }}
                  {{ form_widget(form.dailyStartTime, {'attr': {'class': 'form-control'}}) }}
                  {{ form_errors(form.dailyStartTime) }}
                </div>

                <div class="form-group mt-3">
                  {{ form_label(form.dailyEndTime) }}
                  {{ form_widget(form.dailyEndTime, {'attr': {'class': 'form-control'}}) }}
                  {{ form_errors(form.dailyEndTime) }}
                </div>
                <button type="submit" class="btn btn-primary mt-3">Save</button>
              {{ form_end(form) }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {% endblock %}
