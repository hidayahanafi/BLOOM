{% extends 'base.html.twig' %}

{% block head %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/profile.css') }}">
    <style>
        .custom-margin-top {
        margin-top: 100px; 
        }
</style>
{% endblock %}

{% block topbar %}{% endblock %}
{% block navbar %}{% endblock %}

{% block title %}Verify Phone Number{% endblock %}

{% block content %}
    <div class="container-fluid custom-margin-top">
        <div class="row">
            <div class="col-xl-8 offset-xl-2">
                <div class="card shadow">
                    <div class="card-header bg-white border-0">
                        <div class="row align-items-center">
                            <div class="col-8">
                                <h3 class="mb-0">Verify Your Phone Number</h3>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <p class="text-muted mb-4">We have sent a verification code to your phone number. Please enter the code below to verify your phone number.</p>
                            </div>
                        </div>
                        
                        {{ form_start(form, { 'attr': {'class': 'verification-form'} }) }}
                            <div class="form-group">
                                {{ form_label(form.verificationCode, 'Enter Verification Code') }}
                                {{ form_widget(form.verificationCode, { 'attr': {'class': 'form-control form-control-lg'} }) }}
                                {{ form_errors(form.verificationCode) }}
                            </div>

                            <div class="d-flex justify-content-between align-items-center">
                                <button class="btn btn-primary btn-lg" type="submit">Verify</button>
                                <p class="mb-0">
                                    Didn't receive a code? <a href="{{ path('verify_phone_number') }}" class="text-info">Resend code</a>
                                </p>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
