{% extends 'base.html.twig' %}

{% block title %}Edit Planning{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h1 class="text-center mb-4">Edit Planning</h1>

        {{ form_start(form, { 'attr': { 'novalidate': 'novalidate' } }) }}


        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.startDate, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.endDate, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-6">
                {{ form_row(form.dailyStartTime, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.dailyEndTime, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">Update</button>
            <a href="{{ path('planning_index') }}" class="btn btn-secondary">Cancel</a>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
