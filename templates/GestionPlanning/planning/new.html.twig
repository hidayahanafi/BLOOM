{% extends 'base.html.twig' %}

{% block title %}Create Planning{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h1 class="mb-4">Create Planning</h1>


        {{ form_start(form, { 'attr': { 'novalidate': 'novalidate' } }) }}  

            <div class="form-group mb-3">
                {{ form_label(form.startDate, 'Start Date', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.startDate, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.startDate) }}
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.endDate, 'End Date', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.endDate, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.endDate) }}
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.dailyStartTime, 'Daily Start Time', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.dailyStartTime, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.dailyStartTime) }}
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.dailyEndTime, 'Daily End Time', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.dailyEndTime, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.dailyEndTime) }}
            </div>

            <button type="submit" class="btn btn-success btn-lg">Save</button>
        {{ form_end(form) }}
    </div>
</div>

{% endblock %}
