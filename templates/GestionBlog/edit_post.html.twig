{% extends 'base.html.twig' %}

{% block title %}Edit Post - Update Your Content{% endblock %}

{% block content %}

<!-- Edit Post Section -->
<div class="container-fluid py-5">
    <div class="container">
        <div class="text-center mx-auto mb-5" style="max-width: 500px;">
            <h5 class="d-inline-block text-primary text-uppercase border-bottom border-5">Edit Post</h5>
            <h1 class="display-4">Update Your Post</h1>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">{{ message }}</div>
                {% endfor %}
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger">{{ message }}</div>
                {% endfor %}

                {{ form_start(postForm, {'attr': { 'novalidate': 'novalidate', 'enctype': 'multipart/form-data'}}) }}

                    <div class="form-group mb-3">
                        <label class="form-label">{{ form_label(postForm.titre) }}</label>
                        {{ form_widget(postForm.titre, {'attr': {'class': 'form-control'}}) }}
                        <div class="text-danger">{{ form_errors(postForm.titre) }}</div>
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label">{{ form_label(postForm.contenu) }}</label>
                        {{ form_widget(postForm.contenu, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                        <div class="text-danger">{{ form_errors(postForm.contenu) }}</div>
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label">{{ form_label(postForm.categorie) }}</label>
                        {{ form_widget(postForm.categorie, {'attr': {'class': 'form-select'}}) }}
                        <div class="text-danger">{{ form_errors(postForm.categorie) }}</div>
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label">{{ form_label(postForm.image_post) }}</label>
                        {{ form_widget(postForm.image_post, {'attr': {'class': 'form-control'}}) }}
                        <div class="text-danger">{{ form_errors(postForm.image_post) }}</div>

                        {% if post.imagePost %}
                            <div class="image-preview mt-3">
                                <img src="{{ post.imagePost }}" alt="Current image" class="img-fluid rounded" style="max-width: 100%;">
                                <small class="d-block text-muted mt-2">Current image</small>
                            </div>
                        {% endif %}
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-2"></i> Update Post
                        </button>
                        <a href="{{ path('view_post', {'id': post.id}) }}" class="btn btn-secondary btn-lg">
                            <i class="fas fa-times me-2"></i> Cancel
                        </a>
                    </div>

                {{ form_end(postForm) }}
            </div>
        </div>
    </div>
</div>

{% endblock %}
