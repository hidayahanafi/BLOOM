{% extends 'base.html.twig' %}

{% block title %}Félicitations !{% endblock %}
{% block content %}
<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card shadow-lg text-center" style="width: 600px; padding: 30px; border-radius: 15px;">
        <h2 class="fw-bold text-primary">Félicitations ! 🎉</h2>

        <p class="text-muted">Vous avez échangé vos points contre cette récompense :</p>
        <div class="border rounded p-4 bg-light">
            <img src="{{ asset(recompense.img) }}" alt="{{ recompense.nom }}" class="img-fluid rounded" style="max-height: 200px; object-fit: cover;">
            <h4 class="mt-3">{{ recompense.nom }}</h4>
            <p class="text-muted">{{ recompense.description }}</p>
            <p class="fw-bold">Coût : {{ recompense.cout }} ⭐️</p>
        </div>
        <div class="mt-4">
            <a href="{{ path('app_recompense', { 'id_user': id_user }) }}" class="btn btn-primary">Retour</a>
            <a href="{{ path('app_felicitations', { 'id': recompense.id, 'id_user': id_user }) }}?pdf=1" class="btn btn-success">Télécharger le PDF</a>
        </div>
    </div>
</div>
{% endblock %}

