       <!-- Row for Rewards -->
<div class="row row-cols-1 row-cols-md-4 g-4">
    {% for recompense in recompenses %}
        <div class="col">
            <div class="bg-light rounded text-center shadow-sm">
                <div class="position-relative">
                    <!-- Image de la récompense -->
                    <img class="img-fluid rounded-top" src="{{ asset(recompense.img) }}" alt="" style="height: 200px; object-fit: cover;">
                    <div class="position-absolute w-100 h-100 top-50 start-50 translate-middle rounded-top d-flex flex-column align-items-center justify-content-center" 
                         style="background: 
                             {% if recompense.etat == 'verrouillé' %}
                                 rgba(29, 42, 77, .8); 
                             {% elseif recompense.etat == 'réclamé' %}
                                 rgba(164, 229, 24, 0.3); /* Vert de succès */
                             {% else %}
                                 rgba(29, 42, 77, .3); 
                             {% endif %};">
                        <h2 class="text-white fw-bold mb-3" style="font-size: 20px;">
                            {% if recompense.etat == 'verrouillé' %}
                                Verrouillé
                            {% elseif recompense.etat == 'réclamé' %}
                                Réclamé
                            {% else %}
                                {{ recompense.nom }}
                            {% endif %}
                        </h2>
                    </div>
                </div>
                <div class="text-center py-4">
                    <!-- Coût de la récompense -->
                    {% if recompense.etat == 'verrouillé' or recompense.etat == 'réclamé' %}
                        <p class="fw-bold" style="font-size: 16px; color: #808080;">Coût : {{ recompense.cout }} ⭐️</p>
                    {% elseif totalPoints < recompense.cout %}
                        <p class="fw-bold" style="font-size: 16px; color: red;">Coût : {{ recompense.cout }} ⭐️</p>
                    {% else %}
                        <p class="fw-bold" style="font-size: 16px; color: #13C5DD;">Coût : {{ recompense.cout }} ⭐️</p>
                    {% endif %}
                    
                    <!-- Si la récompense a été réclamée -->
                    {% if recompense.etat == 'réclamé' %}
                        <p style="font-size: 14px;">➝ {{ recompense.nom }}</p>
                        <a href="#" class="btn btn-secondary rounded-pill py-2 px-4 my-2" style="background-color: #505050; color: white; border: none;">
                            Réclamé
                        </a>
                    {% else %}
                        <p style="font-size: 14px;">➝ {{ recompense.description }}</p>
                        <form action="{{ path('app_echanger_recompense', { 'id': recompense.id, 'id_user': id_user }) }}" method="POST">
                            <input type="hidden" name="_token" value="{{ csrf_token('echanger_recompense_' ~ recompense.id) }}">
                            <button type="submit" 
                                class="btn {{ recompense.etat == 'verrouillé' or totalPoints < recompense.cout ? 'btn-secondary' : 'btn-primary' }} rounded-pill py-2 px-4 my-2"
                                style="{{ recompense.etat == 'verrouillé' or totalPoints < recompense.cout ? 'background-color: #505050; color: white; border: none;' : '' }}"
                                {% if recompense.etat == 'verrouillé' or totalPoints < recompense.cout %}disabled{% endif %}>
                                {{ recompense.etat == 'verrouillé' ? 'Verrouillé' : 'Échanger' }}
                            </button>
                        </form>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endfor %}
